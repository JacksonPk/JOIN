<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/recyclerview_layout_for_select"
>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/activity_item_profile_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="17dp"
                android:src="@drawable/ic_account_circle_black_24dp"
        />
        <TextView
                android:id="@+id/activity_item_user_email_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/activity_item_profile_imageview"
                android:text="xxxxxxx@naver.com"
                android:textColor="#000000"
                android:textStyle="bold"/>

        <TextView
                android:id="@+id/activity_item_continueDay_textview"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/activity_item_user_email_textview"
                android:layout_marginTop="23dp" android:layout_marginLeft="7dp"
                android:background="@drawable/edge"
                android:text="          " android:textSize="13dp" android:textColor="@color/colorWhite"/>

        <TextView
                android:id="@+id/activity_item_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/activity_item_profile_imageview"
                android:layout_marginTop="15dp" android:layout_below="@+id/activity_item_user_email_textview"
                android:text="2019년 11월 30일"  android:textSize="12dp"

                android:layout_marginBottom="1dp" android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/activity_item_profile_imageview"/>


    </RelativeLayout>

    <RelativeLayout android:layout_width="match_parent" android:layout_height="95dp">
        <TextView
                android:id="@+id/activity_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="10dp" android:layout_marginBottom="10dp" android:text="걷기 운동(제목)"
                android:textColor="#000000" android:textSize="20dp" android:textStyle="bold"/>
        <TextView
                android:id="@+id/activity_item_distance_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"
                android:text="거리"
                android:layout_below="@+id/activity_item_title" android:layout_marginLeft="25dp" />
        <TextView
                android:id="@+id/activity_item_distance_input_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_item_distance_textview"
                android:layout_marginLeft="25dp" android:layout_marginBottom="10dp"
                android:text="50km"
                android:textColor="#000000"
                android:textSize="18dp" />

        <TextView
                android:id="@+id/activiy_item_altitude_textview"
                android:layout_toRightOf="@+id/activity_item_distance_input_textview"
                android:layout_below="@+id/activity_item_title" android:layout_marginLeft="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "최고 고도" android:textSize="11dp"/>
        <TextView
                android:id="@+id/activity_item_altitude_input_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.0 m" android:textSize="18dp"
                android:layout_marginLeft="25dp" android:textColor="#000000"
                android:layout_below="@+id/activiy_item_altitude_textview"
                android:layout_toRightOf="@+id/activity_item_distance_input_textview"
        />

        <!--
        <TextView
                android:id="@+id/activity_item_continueDay_textview"
                android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp" android:layout_marginRight="205dp"
                android:text="3일" android:textColor="@color/colorPrimaryDark"
                android:textSize="15dp" android:textStyle="italic"/>
                -->



        <RelativeLayout android:layout_width="150dp" android:layout_height="85dp"
                        android:layout_alignParentRight="true" android:layout_marginRight="15dp">

            <View android:layout_width="50dp" android:layout_height="1dp" android:background="@color/colorGrey"
            android:layout_marginTop="14dp"/>

            <ImageView android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/award"
            android:layout_marginLeft="60dp"/>

            <View android:layout_width="50dp" android:layout_height="1dp" android:background="@color/colorGrey"
                  android:layout_marginTop="14dp" android:layout_alignParentRight="true"/>

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="개근상"
                      android:layout_marginTop="20dp" android:layout_marginLeft="15dp"
                      android:textStyle="bold" android:textSize="11dp"/>

            <ImageView
                    android:id="@+id/activity_item_continue_medal_imageview"
                    android:layout_width="45dp" android:layout_height="45dp"

                    android:layout_marginTop="39dp" android:layout_marginLeft="10dp"
            />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="걸음상"
                      android:layout_marginTop="20dp" android:layout_marginRight="15dp" android:layout_alignParentRight="true"
                      android:textStyle="bold" android:textSize="11dp"/>

            <ImageView
                    android:id="@+id/activity_item_walk_medal_imageview"
                    android:layout_width="45dp" android:layout_height="45dp" android:layout_alignParentRight="true"
                    android:layout_marginTop="39dp" android:layout_marginRight="10dp"
            />



        </RelativeLayout>
    </RelativeLayout>

    <ImageView
            android:id="@+id/activity_item_map_imageview"
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:src="@drawable/ic_account_circle_black_24dp"/>
    <View android:layout_width="match_parent" android:layout_height="10dp"
          android:layout_marginTop="5dp"
          android:background="@drawable/gradation"/>



</LinearLayout>