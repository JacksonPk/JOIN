<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".Main.Fragment.fragment_detail"
             android:orientation="vertical">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:id="@+id/detail_profile_imageview"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:src="@drawable/ic_account_circle_black_24dp"
        />
        <TextView
                android:id="@+id/detail_user_email_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/detail_profile_imageview"
                android:layout_marginTop="20dp"
                android:text="bwrw2347" android:textColor="#000000"
                android:textStyle="bold"
        />
        <TextView
                android:id="@+id/detail_date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/detail_profile_imageview"
                android:layout_marginTop="17dp" android:layout_below="@+id/detail_user_email_textview"
                android:text="2019년 11월 30일"  android:textSize="10dp"
                android:layout_marginBottom="1dp"
                android:layout_toEndOf="@+id/detail_profile_imageview"/>
        <TextView
                android:id="@+id/detail_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_profile_imageview"
                android:layout_marginLeft="20dp" android:layout_marginTop="1dp"
                android:text="걷기 운동(제목)" android:textStyle="bold" android:textSize="20dp"
                android:textColor="#000000"/>

        <TextView
                android:id="@+id/detail_explain_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_title_textview"
                android:layout_marginTop="20dp" android:layout_marginLeft="20dp"
                android:text="내용이 들어갈 자리입니다."
        />

    </RelativeLayout>

    <View android:layout_width="match_parent" android:layout_height="0.5dp"
          android:background="@color/colorGrey" android:layout_marginTop="10dp"/>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="50dp" android:layout_marginTop="10dp">

        <TextView
                android:id="@+id/detail_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:text="거리"
        />

        <TextView
                android:id="@+id/detail_consuming_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이동시간"
                android:layout_toRightOf="@+id/detail_view_line1"
                android:layout_marginLeft="25dp"
                android:layout_alignParentTop="true"/>

        <TextView
                android:id="@+id/detail_averSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평균 속도"
                android:layout_toRightOf="@+id/detail_view_line2"
                android:layout_marginLeft="34dp"
        />

        <TextView
                android:id="@+id/detail_pedometer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="걸음 수"
                android:layout_toRightOf="@+id/detail_view_line3"
                android:layout_marginLeft="17dp"
        />

        <TextView
                android:id="@+id/detail_distance_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00 km"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_below="@+id/detail_distance"
                android:layout_marginLeft="25dp"
        />

        <TextView
                android:id="@+id/detail_consuming_time_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:45"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_below="@+id/detail_consuming_time"
                android:layout_toRightOf="@+id/detail_view_line1"
                android:layout_marginLeft="30dp"
        />

        <TextView
                android:id="@+id/detail_averSpeed_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0m"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_below="@+id/detail_averSpeed"
                android:layout_toRightOf="@id/detail_view_line2"
                android:layout_marginLeft="20dp"

                android:textAlignment="center"
        />

        <TextView
                android:id="@+id/detail_pedometer_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_below="@+id/detail_averSpeed"
                android:layout_toRightOf="@id/detail_view_line3"
                android:layout_marginLeft="27dp"
        />

        <View
                android:id="@+id/detail_view_line1"
                android:layout_width="0.5dp" android:layout_height="40dp"
                android:background="@color/colorGrey"
                android:layout_toRightOf="@id/detail_distance_textview"
                android:layout_marginLeft="25dp"/>

        <View
                android:id="@+id/detail_view_line2"
                android:layout_width="0.5dp" android:layout_height="40dp"
              android:background="@color/colorGrey"
              android:layout_toRightOf="@+id/detail_consuming_time_textview"
              android:layout_marginLeft="25dp"/>

        <View
                android:id="@+id/detail_view_line3"
                android:layout_width="0.5dp" android:layout_height="40dp"
              android:background="@color/colorGrey"
              android:layout_toRightOf="@+id/detail_averSpeed"
              android:layout_marginLeft="38dp"/>





    </RelativeLayout>


    <ImageView
            android:id="@+id/detail_map_imageview"
            android:layout_width="match_parent" android:layout_height="300dp"
            android:layout_marginTop="10dp" android:src="@drawable/ic_account_circle_black_24dp"
    />




        <!--test-->
        <TextView
                android:id="@+id/detail_map_endpointLatlng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />

</LinearLayout>